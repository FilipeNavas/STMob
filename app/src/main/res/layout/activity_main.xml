<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atividade"
        android:id="@+id/btnAtividade"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="chamaBuscarAtividadesActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participante"
        android:id="@+id/btnParticipante"
        android:onClick="chamaCadastrarParticipantesActivity"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAtividade"
        android:layout_alignEnd="@+id/btnAtividade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aviso ExtraordinÃ¡rio"
        android:id="@+id/btnAviso"
        android:onClick="chamaCadastraAvisoActivity"
        android:layout_below="@+id/btnParticipante"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnParticipante" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnLogin"
        android:onClick="chamaLoginActivity"
        android:layout_below="@+id/btnAviso"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnAviso" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTAR BANCO"
        android:id="@+id/btnTestarBanco"
        android:onClick="chamaTestarBanco"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnLogin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostra Atividade"
        android:id="@+id/btnMostraAtividade"
        android:layout_below="@+id/btnLogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="chamaMostraAtividadeActivity" />

</RelativeLayout>
