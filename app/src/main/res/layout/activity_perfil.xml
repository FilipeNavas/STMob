<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifsp.stmob.PerfilActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Usuario"
        android:id="@+id/txtNomeUsuario"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aviso Extraordinário (Admin)"
        android:id="@+id/btnAvisoExtraordinarioAdmin"
        android:onClick="chamaBuscaAvisoActivity"
        android:layout_below="@+id/btnEmiteLembrete"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnEmiteLembrete" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altera Participante (Admin)"
        android:id="@+id/btnParticipanteAdmin"
        android:layout_below="@+id/btnAvisoExtraordinarioAdmin"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnAvisoExtraordinarioAdmin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altera Informações Pessoais"
        android:id="@+id/btnAlteraInformacoes"
        android:onClick="chamaAlterarInformacoesPessoais"
        android:layout_below="@+id/txtNomeUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:id="@+id/btnLogout"
        android:onClick="logout"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/btnParticipanteAdmin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Feedback do Evento"
        android:id="@+id/btnEnviarFeedback"
        android:onClick="enviaFeedbackActivity"
        android:layout_below="@+id/btnAlteraInformacoes"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnAlteraInformacoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emite Lembrete"
        android:id="@+id/btnEmiteLembrete"
        android:onClick="emiteLembreteActivity"
        android:layout_below="@+id/btnEnviarFeedback"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnEnviarFeedback" />
</RelativeLayout>
