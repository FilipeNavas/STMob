<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.edu.ifsp.stmob.RecuperaSenhaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite seu e-mail com o qual criou sua conta. Enviaremos um código único que possibilitará que você troque sua seha."
        android:id="@+id/textViewRecSenha"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/recSenhaEmail"
        android:layout_below="@+id/textViewRecSenha"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp"
        android:text="E-mail"
        android:layout_alignEnd="@+id/textViewRecSenha" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:onClick="recuperarSenha"
        android:id="@+id/btnRecSenha"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
